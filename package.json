{
  "name": "nomatic-jwt",
  "version": "0.0.3",
  "description": "JSON Web Token (JWT) utilities for Node.js",
  "main": "index.js",
  "scripts": {
    "lint": "tslint  \"**/*.ts{,x}\" -e \"node_modules/**\" -e \"**/*.d.ts{,x}\"",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc",
    "postinstall": "npm run build",
    "test": "mocha --recursive test/**/*.test.js",
    "coverage": "nyc mocha --recursive test/**/*.test.js",
    "docs": "typedoc --out ./docs --mode file --hideGenerator ./lib"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.bdfoster.com/bdfoster/nomatic-jwt.git"
  },
  "keywords": [
    "jwt",
    "json",
    "web",
    "token",
    "decode",
    "encode"
  ],
  "author": "Brian D. Foster <bdfoster89@gmail.com>",
  "license": "MIT",
  "nyc": {
    "exclude": [
      "node_modules/",
      "test/"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/chai": "^3.4.34",
    "@types/crypto-js": "^3.1.32",
    "@types/mocha": "^2.2.36",
    "@types/node": "^6.0.57",
    "@types/source-map-support": "^0.2.28",
    "crypto-js": "^3.1.9-1",
    "source-map-support": "^0.4.8"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nyc": "^10.0.0",
    "ts-node": "^2.0.0",
    "tslint": "^4.2.0",
    "typedoc": "^0.5.3",
    "typescript": "^2.1.4"
  }
}
